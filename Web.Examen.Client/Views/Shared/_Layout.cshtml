<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinémania Inc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.Examen.Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Cinémania Inc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light btn-outline-warning" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn-outline-warning" asp-area="" asp-controller="Home" asp-action="Claims">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn-outline-warning" asp-area="" asp-controller="Home" asp-action="SearchFilm">Find a Movie </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="nav-link text-light btn-outline-warning" asp-controller="Film" asp-action="Index">Creer un Film</a></li>
                            <li><a class="nav-link text-light btn-outline-warning" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><a class="nav-link text-light btn-outline-warning" asp-controller="Post" asp-action="Index">Articles</a></li>
                        }
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav navbar-right btn-outline-danger">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="nav-link text-light btn-outline-warning" asp-controller="Admin" asp-action="Index">Bienvenu Administrator</a></li>

                            }
                            else if  (User.IsInRole("guest"))
                            {
                                <li> vous étes un Invité </li>

                            }
                            else if (User.IsInRole("User"))
                                    {
                                <li> Bienvenu Utilisateur</li>

                            }
                            else if (User.IsInRole("Owner"))
                            {
                                <li> Vous etes le Propriétaire </li>

                            }
                            else 
                            { 
                                <li>Visiteur</li>
                            }
                            <li><a class="nav-link text-light" id="qsLogoutBtn" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        }
                        else
                        {
                            <li><a class="nav-link text-light" id="qsLoginBtn" asp-controller="Account" asp-action="Login">Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
  
    <div class="container">
        <main role="main" class="pb-3">
           
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Web.Examen.Client - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
