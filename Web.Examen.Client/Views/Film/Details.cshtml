@model Web.Examen.Client.Models.Film.FilmViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
    </dl>
</div>
<div class="row">
    <table>
        <thead>
            <tr>
                <th>id</th>
           
                <th>Nom</th>
           
                <th>Roles</th>
          
                <th>Description du Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Web.Examen.Client.Models.Acteur.ActeurViewModel item in Model.Acteurs)
            { 
                <tr>
                    <td>@item.Id</td>
             
                    <td>@item.Name</td>
               
                    <td>@item.Roles</td>
               
                     <td>@item.RolesDesCription</td>            
                    <td class="btn btn-primary">
                      <a class="btn btn-primary" href="@Url.Action("EditActeur","Acteur",new {filmid=item.Filmid ,acteurId=item.Id})">
                          <span> Editer</span>
                          </a>
                    </td>
                    <td class="btn btn-primary">
                        <a class="btn btn-primary" href="@Url.Action("DeleteActeur","Acteur",new {filmid=item.Filmid ,acteurId=item.Id})">
                            <span>Supprimer</span>
                            </a>
                    </td>
               </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {id=@Model.Id}) |
    <a asp-controller="Acteur" asp-action="CreateActeur"> Ajouter Un personnage </a> |
    <a asp-controller="Film" asp-action="Index">Back to List</a>
</div>
